[include]
    ; Include local settings
    path = ~/.gitconfig.local
[alias]
    ; General shortcuts
    sh = "!f() { git show --patch-with-stat --color "$@" | diff-so-fancy | less --tabs=4 -RFX; }; f"

    ; Diff and merge
    d = "!f() { git diff --patch-with-stat --color "$@" | diff-so-fancy | less --tabs=4 -RFX; }; f"
    ds = diff --stat
    dc = "!f() { git diff --cached --color "$@" | diff-so-fancy | less --tabs=4 -RFX; }; f"
    dt = difftool
    mt = mergetool

    ; Log
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all -10
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --all --graph
    ll = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    ldr = log --pretty=format:"%C(yellow)%h\\ %ad%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

    ; List aliases
    la = "!git config -l | grep alias | cut -c 7-"

    ; Combinations
    ; fetch and status
    fs = "!git fetch -av && git status -v"
    ; add, commit and push
    acp = "!f() { git add . && git commit -m \"$1\" && git push; }; f"
    cpmp = "!f() {git checkout \"$1\" && git pull && git merge \"$2\" && git push; }; f"
    branchmerge = "!f() {git checkout \"$1\" && git pull && git checkout \"$2\" && git merge \"$1\" && git push; }; f"

[push]
    default = simple
[core]
    eol = lf
    autocrlf = input
    ignorecase = false
    editor = vim
    fileMode = false
[color]
    ui = true
[diff]
    tool = vimdiff
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = red bold
    untracked = red bold
[merge]
    tool = vimdiff
    conflictstyle = diff3
    keepBackup = false
    ff = false
[pull]
    rebase = true
[mergetool]
    prompt = false
[difftool]
    prompt = false
[help]
    autocorrect = 50
[fetch]
    prune = true
[diff-so-fancy]
    stripLeadingSymbols = false
