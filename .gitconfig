[user]
    name = Marc Theunissen
    email = mtheunissen82@gmail.com
[push]
    default = simple
[core]
    eol = lf
    editor = vim
    fileMode = false
[alias]
    ; General shortcuts
    s = status --short
    sv = status --verbose
    sh = show --patch-with-stat
    a = add
    ai = add --interactive
    ap = add --patch
    p = push
    cp = cherry-pick
    cl = clone
    co = checkout
    br = branch
    d = diff --patch-with-stat
    ds = diff --stat
    dc = diff --cached

    ; Commit
    c = commit
    cm = commit -m
    ca = commit -a --amend -C HEAD

    ; Log
    ls = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --all
    ll = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    ldr = log --pretty=format:"%C(yellow)%h\\ %ad%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

    ; Reset
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard

    ; Stashing
    sp = stash --patch
    sl = stash list
    sa = stash apply
    ss = stash save

    ; List aliases
    la = "!git config -l | grep alias | cut -c 7-"

    ; Find files
    f = "!git ls-files | grep -i"

    ; Grep files
    grep = grep -Ii
    gr = grep -Ii

    ; Combinations
    ; fetch and status
    fs = "!git fetch -av && git status -v"
    ; add, commit and push
    acp = "!f() { git add . && git commit -m \"$1\" && git push; }; f"
[color]
    ui = true
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
    keepBackup = false
[mergetool]
    prompt = false
[difftool]
    prompt = false
[help]
	autocorrect = 50
