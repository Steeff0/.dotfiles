[include]
    ; Include local settings
    path = ~/.gitconfig.local
[push]
    default = simple
[core]
    eol = lf
    editor = vim
    fileMode = false
[alias]
    ; General shortcuts
    s = status --short
    sv = status --verbose
    sh = "!f() { git show $1 --patch-with-stat --color | diff-so-fancy | less --raw-control-chars; }; f"
    sssh = show --patch-with-stat
    a = add
    ai = add --interactive
    ap = add --patch
    p = push
    cp = cherry-pick
    cl = clone
    co = checkout
    br = branch

    ; Diff and merge
    d = "!f() { git diff $1 --patch-with-stat --color | diff-so-fancy | less --raw-control-chars; }; f"
    ds = diff --stat
    dc = "!f() { git diff $1 --cached --color | diff-so-fancy | less --raw-control-chars; }; f"
    dt = difftool
    mt = mergetool

    ; Commit
    c = commit
    cm = commit -m
    ca = commit -a --amend -C HEAD

    ; Log
    ls = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --all --graph
    ll = log --pretty=format:"%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    ldr = log --pretty=format:"%C(yellow)%h\\ %ad%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

    ; Reset
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard

    ; Stashing
    sp = stash --patch
    sl = stash list
    sa = stash apply
    ss = stash save
    sd = stash drop

    ; List aliases
    la = "!git config -l | grep alias | cut -c 7-"

    ; Find files
    f = "!git ls-files | grep -i"

    ; Grep files
    grep = grep -Iin
    gr = grep -Iin

    ; Combinations
    ; fetch and status
    fs = "!git fetch -av && git status -v"
    ; add, commit and push
    acp = "!f() { git add . && git commit -m \"$1\" && git push; }; f"
[color]
    ui = true
[diff]
    tool = vimdiff
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = red bold
    untracked = red bold
[merge]
    tool = vimdiff
    conflictstyle = diff3
    keepBackup = false
[mergetool]
    prompt = false
[difftool]
    prompt = false
[help]
    autocorrect = 50
