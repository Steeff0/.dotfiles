[alias]
    ; General shortcuts
    s = status --short
    sv = status --verbose
    a = add
    ai = add --interactive
    ap = add --patch
    p = push
    cp = cherry-pick
    cl = clone
    co = checkout
    br = branch

    ; Commit
    c = commit
    cm = commit -m
    ca = commit -a --amend -C HEAD

    ; Reset
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard

    ; Stashing
    sp = stash --patch
    sl = stash list
    sa = stash apply
    ss = stash save
    sd = stash drop

    ; Find files
    f = "!git ls-files | grep -i"

    ; Grep files
    grep = grep -Iin
    gr = grep -Iin

    ; Combinations
    ; fetch and status
    fs = "!git fetch -av && git status -v"
